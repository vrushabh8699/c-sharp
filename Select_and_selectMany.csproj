using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Select_and_selectMany
{
    internal class Program
    {
        static void Main(string[] args)
        {
            List<string> name = new List<string>() { "akshy", "vrushan", "roshani", "sushaNT" };
            List<string> nameInCapital = new List<string>();
            foreach(var item in name)
            {
                nameInCapital.Add(item.ToLower());
            }
            foreach(var item in nameInCapital)
            {
                Console.WriteLine($"name : {item}");
            }
            Console.WriteLine();

            List<int> lenght = new List<int>();
            foreach(var item in name)
            {
                lenght.Add(item.Length);
            }
            foreach(var item in lenght)
            {
                Console.WriteLine($"{item} ");
            }
            Console.ReadLine();
        }
    }
}
